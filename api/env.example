# ExoQuest Platform 环境配置示例
# 复制此文件为 .env 并根据您的环境进行配置

# 应用配置
APP_NAME="ExoQuest Platform API"
APP_VERSION="1.0.0"
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 模型服务配置
MODEL_BASE_URL=http://localhost:8000
MODEL_PATH=/models     # 模型文件路径

# MinIO 对象存储配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_DATASETS=datasets
MINIO_BUCKET_REPORTS=reports
MINIO_BUCKET_FEEDBACK=feedback
MINIO_SECURE=false

# Redis 配置
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# JWT 配置
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS 配置
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# 文件上传配置
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=.csv,.json,.txt
